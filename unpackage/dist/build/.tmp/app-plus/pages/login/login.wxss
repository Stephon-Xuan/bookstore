/* 导航栏 */
.lgrg-top-nav {
  height: 80rpx;
}
.lgrg-top-nav .lgrg-top-nav-img {
    height: 53rpx;
    width: 53rpx;
    border-radius: 50%;
}
.lgrg-top-nav .lgrg-top-nav-textbox {
    width: 84rpx;
    height: 42rpx;
    background-color: #cfcece;
    border-radius: 9px;
}
.lgrg-top-nav .lgrg-top-nav-textbox .lgrg-top-nav-textbox-text {
      font-family: AdobeHeitiStd-Regular;
      font-size: 22rpx;
      font-weight: normal;
      font-stretch: normal;
      letter-spacing: 0px;
      color: #fcfafa;
      line-height: 42rpx;
}
/* 标题 */
.lgrg-title {
  padding: 64rpx;
}
.lgrg-title .lgrg-title-big {
    font-family: AdobeHeitiStd-Regular;
    font-size: 40rpx;
    font-weight: bold;
    letter-spacing: 0rpx;
    color: #000000;
}
.lgrg-title .lgrg-title-big .lgrg-title-small {
      width: 241rpx;
      height: 21rpx;
      font-family: AdobeHeitiStd-Regular;
      font-size: 22rpx;
      letter-spacing: 0rpx;
      color: #615f5f;
}
/* 输入框 */
.lgrg-content {
  height: 482rpx;
  border-radius: 22rpx;
  margin: 20rpx 64rpx 80rpx 64rpx;
  padding: 76rpx 0 70rpx 0;
  -webkit-box-shadow: 0rpx 0rpx 100rpx rgba(114, 130, 138, 0.2);
          box-shadow: 0rpx 0rpx 100rpx rgba(114, 130, 138, 0.2);
}
.lgrg-content .lgrg-content-input {
    width: 522rpx;
    height: 62rpx;
    background-color: #f7f7f7;
    border-radius: 31rpx;
    padding: 0 43rpx;
}
.lgrg-content .lgrg-content-input .get-verification {
      height: 40rpx;
      font-size: 21rpx;
      line-height: 40rpx;
      width: 200rpx;
      color: #adaaaa;
      border: 0;
}
.lgrg-content .lgrg-content-bottonbox {
    width: 522rpx;
}
.lgrg-content .lgrg-content-bottonbox .lgrg-content-bottonbox-button {
      color: #fdfbfb;
      width: 522rpx;
      height: 62rpx;
      line-height: 62rpx;
      background-color: #94ddb4;
      margin-bottom: 20rpx;
      border-radius: 31rpx;
}
.lgrg-content .lgrg-content-bottonbox .lgrg-content-bottonbox-button:hover {
        background-color: #39b54a;
}
/* 登录注册平台 */
